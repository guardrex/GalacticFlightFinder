<div class="date">
    <h4>@Flight.DepartureTime.ToString("ddd MMM d")</h4>
    @Flight.TicketClass.ToDisplayString()
</div>

<div class="departure">
    <h4>@Flight.DepartureTime.ToShortTimeString()</h4>
    @Flight.FromSpaceportCode
</div>

<div class="arrow">➝</div>

<div class="arrival">
    <h4>@Flight.DepartureTime.AddHours(Flight.DurationHours).ToShortTimeString()</h4>
    @Flight.ToSpaceportCode
</div>

@functions
{
    public FlightSegment Flight { get; set; }
}
